<Window x:Class="WPF_OOM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OOM" Height="350" Width="525">
    <DockPanel x:Name="DP">
    <ListView x:Name="ContactListView" DockPanel.Dock="Left">
        <ListView.ItemTemplate>
            <DataTemplate>
                <WrapPanel>                    
                    <TextBlock Text="{Binding FirstName}" />
                    <TextBlock Text="{Binding NickName}" />
                    <TextBlock Text="{Binding LastName}" />
                </WrapPanel>                
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
        <TabControl x:Name="ChatTabControl" DockPanel.Dock="Right" ItemsSource="{Binding}">
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <StackPanel>
                        <ListView ItemsSource="{Binding messages}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn DisplayMemberBinding="{Binding text}"></GridViewColumn>
                                </GridView>
                            </ListView.View>

                        </ListView>
                    </StackPanel>              
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </DockPanel>
</Window>

<Window x:Class="WPF_OOM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
        Title="OOM" Height="350" Width="525">
    <DockPanel x:Name="DP">
    <ListView x:Name="ContactListView" DockPanel.Dock="Left" SelectionChanged="OnSelectContact">
        <ListView.ItemTemplate>
            <DataTemplate>
                <WrapPanel>                    
                    <TextBlock Text="{Binding FirstName}" Margin="10"/>
                    <TextBlock Text="{Binding NickName}" Margin="10"/>
                    <TextBlock Text="{Binding LastName}" Margin="10"/>
                </WrapPanel>                
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
        <TabControl x:Name="ChatTabControl" DockPanel.Dock="Right" ItemsSource="{Binding}">
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </TabControl.ItemContainerStyle>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <DockPanel>
                        <ListView ItemsSource="{Binding Path=messages}" DockPanel.Dock="Top">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn DisplayMemberBinding="{Binding sender.FirstName}"></GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding text}"></GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <TextBox DockPanel.Dock="Bottom" AcceptsReturn="False" KeyUp="ChatBox_OnKeyUp" Text="{Binding DraftMessage}"></TextBox>
                    </DockPanel>              
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </DockPanel>
</Window>
